<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_marginRight="10dp" android:background="@color/lightGreen"
        android:paddingTop="5dp" android:paddingBottom="5dp"
        android:paddingLeft="3dp" android:paddingRight="3dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversation about: "
            android:id="@+id/conversationAbout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item"
            android:id="@+id/conversationHeader"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/conversationAbout"
            android:layout_toEndOf="@+id/conversationAbout"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month Day Year, Time"
            android:id="@+id/dateConversationCreated"
            android:layout_below="@+id/conversationAbout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="3dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>