<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mycompany.bullbuy.Register">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="28sp"
        android:fontFamily="roboto-slab"
        android:id="@+id/textView2"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_regiser"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/user" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/buy_register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sell_register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/imageView10" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="2dp"
        android:src="@drawable/chat_register"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="buy"
        android:fontFamily="roboto-slab"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sell"
        android:fontFamily="roboto-slab"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="chat"
        android:fontFamily="roboto-slab"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="280dp"
        android:id="@+id/textView7" />
    <EditText
        android:id="@+id/name_REGISTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/Name"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/eMail_REGISTER"
        android:fontFamily="roboto-slab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="20dp"
        android:hint="@string/EMail"
        android:inputType="textEmailAddress"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/password_REGISTER"
        android:fontFamily="roboto-slab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:singleLine="true"/>
    <Button
        android:id="@+id/registerButton_REGISTER"
        android:fontFamily="roboto-slab"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:background="#006747"
        android:nestedScrollingEnabled="false"
        android:elegantTextHeight="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_centerHorizontal="true" />
</RelativeLayout>