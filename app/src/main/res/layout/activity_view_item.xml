<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mycompany.bullbuy.ViewItem">

    <TextView
        android:id="@+id/title_ViewItem"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:fontFamily="roboto-slab"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/price_ViewItem"
        android:text="$100.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.parse.ParseImageView
        android:id="@+id/photo_ViewItem"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/description_ViewItem"
        android:text="Descripiton"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/messageSellerButton_ViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/message_seller"
        android:textStyle="bold"
        android:fontFamily="roboto-slab"
        android:background="@color/darkGreen"
        android:nestedScrollingEnabled="false"
        android:elegantTextHeight="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF" />

    <Button
        android:id="@+id/addButton_ViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_watchlist"
        android:textStyle="bold"
        android:fontFamily="roboto-slab"
        android:background="@color/lightGreen"
        android:nestedScrollingEnabled="false"
        android:elegantTextHeight="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF" />

</LinearLayout>
