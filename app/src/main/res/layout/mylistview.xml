<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_marginRight="10dp" android:background="@color/lightGreen"
        android:paddingTop="5dp" android:paddingBottom="5dp"
        android:paddingLeft="3dp" android:paddingRight="3dp" >

        <TextView
            android:id="@+id/itemTitle_myAdapter"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemPhoto_myAdapter"
            android:layout_toEndOf="@id/itemPhoto_myAdapter"
            android:layout_alignTop="@id/itemPhoto_myAdapter"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/itemPrice_myAdapter"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemPhoto_myAdapter"
            android:layout_toEndOf="@id/itemPhoto_myAdapter"
            android:layout_below="@id/itemTitle_myAdapter"
            android:paddingLeft="4dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/itemDescription_myAdapter"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:layout_below="@+id/itemPrice_myAdapter"
            android:layout_alignLeft="@+id/itemPrice_myAdapter"
            android:layout_alignStart="@+id/itemPrice_myAdapter" />

        <com.parse.ParseImageView
            android:id="@+id/itemPhoto_myAdapter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>

