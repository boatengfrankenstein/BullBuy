<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mycompany.bullbuy.MyItems">

    <TextView
        android:id="@+id/itemTitle_myAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/itemPhoto_myAdapter"
        android:layout_toEndOf="@id/itemPhoto_myAdapter"
        android:layout_alignTop="@id/itemPhoto_myAdapter"
        android:paddingBottom="10dp"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/itemDescription_myAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/itemPhoto_myAdapter"
        android:layout_toEndOf="@id/itemPhoto_myAdapter"
        android:layout_below="@id/itemTitle_myAdapter"
        android:paddingBottom="10dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/itemPrice_myAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/itemPhoto_myAdapter"
        android:layout_toEndOf="@id/itemPhoto_myAdapter"
        android:layout_below="@id/itemDescription_myAdapter"
        android:textColor="#000000"/>

    <com.parse.ParseImageView
        android:id="@+id/itemPhoto_myAdapter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

</RelativeLayout>