<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/droid"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="5dp"
        android:fontFamily="roboto-slab"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/email"
        android:maxHeight="25dp"
        android:maxWidth="25dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/eMail_LOGIN"
        android:layout_toStartOf="@+id/eMail_LOGIN" />
    <EditText
        android:id="@+id/eMail_LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EMail"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:fontFamily="roboto-slab"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/password"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/eMail_LOGIN"
        android:layout_toLeftOf="@+id/eMail_LOGIN"
        android:layout_toStartOf="@+id/eMail_LOGIN"
        android:layout_marginTop="3dp"
        android:layout_marginRight="1dp" />
    <EditText
        android:id="@+id/password_LOGIN"
        android:fontFamily="roboto-slab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Password"
        android:layout_toLeftOf="@id/password_LOGIN"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_below="@+id/eMail_LOGIN"
        android:layout_alignLeft="@+id/eMail_LOGIN"
        android:layout_alignStart="@+id/eMail_LOGIN" />
    <Button
        android:id="@+id/loginButton_LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="@string/Login"
        android:fontFamily="roboto-slab"
        android:textStyle="bold"
        android:background="#006747"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_below="@+id/password_LOGIN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/NotRegistered"
        android:fontFamily="roboto-slab"
        android:textColor="#676b61"
        android:textSize="17sp"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/registerButton_LOGIN"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/registerButton_LOGIN"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:fontFamily="roboto-slab"
        android:background="#96c74d"
        android:nestedScrollingEnabled="false"
        android:elegantTextHeight="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>